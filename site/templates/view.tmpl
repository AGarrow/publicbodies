{% extends "layout.tmpl" %}

{% block title %}
  {{ title }}
{% endblock %}

{% block content %}
  <div class="box">
    <h1>{{ title }}
      {% if abbr %}
        <span class="abbr">({{ abbr }})</span>
      {% endif %}
    </h1>

    <hr/>
    <table width="100%">
      {% if url %}
      <tr>
        <th width="33%">Home page</th>
        <td><a href="{{ url }}">
          {{ title }}</a></td>
      </tr>
      {% endif %}
      {% if email %}
      <tr>
        <th width="33%">E-Mail</th>
        <td>{{ email }}</td>
      </tr>
      {% endif %}
      {% if address %}
      <tr>
        <th>Address</th>
        <td>{{ address }}</td>
      </tr>
      {% endif %}
      {% if category %}
      <tr>
        <th>Category/Type</th>
        <td>{{ category }}</td>
      </tr>
      {% endif %}
      {% if parent %}
      <tr>
        <th>Parent agency</th>
        <td>{{ parent }}</td>
      </tr>
      {% endif %}
      {% if jurisdiction %}
      <tr>
        <th>Jurisdiction</th>
        <td>{{ jurisdiction }}
          ({{ jurisdiction_code }})</td>
      </tr>
      {% endif %}
      {% if description %}
      <tr>
        <td colspan="2"><p>{{ description }}</p></td>
      </tr>
      {% endif %}
    </table>
    <hr />
    Source: <a title="{{ source_description }}" href="{{ source_url }}">{{ source }}</a>
    &middot; <a href="{{ url }}.json">JSON</a>
  </div>
{% endblock %}





